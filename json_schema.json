{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "title": "Palette",
   "description": "A handful color's palette.",
   "type": "object",
   "properties": {
      "themes": {
         "type": "object",
         "properties": {
            "name": {
               "type": "string"
            },
            "night-mode-toggle": {
               "type": "boolean"
            },
            "dark": {
               "type": "object",
               "properties": {
                  "colors": {
                     "type": "object",
                     "properties": {
                        "primary": {
                           "type": "object",
                           "properties": {
                              "background": {
                                 "type": "string"
                              },
                              "foreground": {
                                 "type": "string"
                              }
                           }
                        },
                        "normal": {
                           "type": "object"
                        },
                        "bright": {
                           "type": "object"
                        }
                     }
                  }
               }
            },
            "light": {
               "type": "object",
               "properties": {
                  "properties": {
                     "colors": {
                        "description": "Palette colors",
                        "type": "object",
                        "properties": {
                           "primary": {
                              "description": "Primary colors.",
                              "type": "object",
                              "properties": {
                                 "background": {
                                    "type": "string"
                                 },
                                 "foreground": {
                                    "type": "string"
                                 }
                              }
                           },
                           "normal": {
                              "type": "object"
                           },
                           "bright": {
                              "type": "object"
                           }
                        }
                     }
                  }
               }
            }
         }
      }
   },
   "required": [
      "themes"
   ]
}